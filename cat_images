import requests
import os
import threading

# Function to download cat image and save it to a specified directory
def download_cat_image(thread_number, save_directory):
    for i in range(20):
        url = "https://cataas.com/cat/"
        response = requests.get(url)
        print(response)
        if response.status_code == 200:
            with open(os.path.join(save_directory, f"cat_{thread_number*20 + i}.jpg"), 'wb') as f:
                f.write(response.content)
                print(f"Cat image {thread_number*20 + i} downloaded successfully.")
        else:
            print(f"Failed to download cat image {thread_number*20 + i}.")

# Function to create a folder if it doesn't exist
def create_folder(folder_name):
    if not os.path.exists(folder_name):
        os.makedirs(folder_name)

# Main function to download a specified number of cat images using threading
def download_cat_images(num_images, save_directory):
    create_folder(save_directory)
    threads = []
    for i in range(1, num_images + 1):
        thread = threading.Thread(target=download_cat_image, args=(i, save_directory))
        threads.append(thread)
        thread.start()

    # Wait for all threads to complete
    for thread in threads:
        thread.join()

# Example usage
if __name__ == "__main__":
    num_threads = 50  # Change this to the number of cat images you want to download
    save_directory = "cats"  # Change this to your desired directory
    download_cat_images(num_threads, save_directory)

